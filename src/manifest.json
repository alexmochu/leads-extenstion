{
    "manifest_version": 3,
    "name": "Kejani Leads Scrapper",
    "version": "1.1.0",
    "description": "Collect leads from social media and store them in your local Excel file.",
    "action": {
        "default_title": "Kejani Leads Scraper"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads",
        "clipboardWrite",
        "sidePanel"
    ],
    "host_permissions": [
        "https://*.linkedin.com/*",
        "https://*.twitter.com/*",
        "https://*.x.com/*",
        "https://*.facebook.com/*",
        "https://*.tiktok.com/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    },
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    }
}